    public String[] calculateGrades (int[] scoreArray){
        //int[] orderedScoreArray = scoreArray;
        //Arrays.sort(orderedScoreArray);
        int highestScore = 100;
        
        String[] gradeStatement = new String[scoreArray.length];
        
        //for(int score: scoreArray){
            for(int student = 0; student < scoreArray.length; student++){
                int score = scoreArray[student];
                if(score >= highestScore-10){
                    gradeStatement[student] = ("Student " + student + " score is " + score + " and grade is A.");
                }
                else if(score >= highestScore-20){
                    gradeStatement[student] = ("Student " + student + " score is " + score + " and grade is B.");
                    //return gradeStatement;
                }
                else if(score >= highestScore-30){
                    gradeStatement[student] = ("Student " + student + " score is " + score + " and grade is C.");
                    //return gradeStatement;
                }
                else if(score >= highestScore-40){
                    gradeStatement[student] = ("Student " + student + " score is " + score + " and grade is D.");
                   // return gradeStatement;
                }
                else{
                    gradeStatement[student] = ("Student " + student + " score is " + score + " and grade is F.");
                   // return gradeStatement;
                }
            }
        //}
        return gradeStatement;
    }
    
    
