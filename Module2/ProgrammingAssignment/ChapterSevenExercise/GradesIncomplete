    public String[] calculateGrades (int[] scoreArray){
        int[] orderedScoreArray = scoreArray;
        Arrays.sort(orderedScoreArray);
        int highestScore = orderedScoreArray[orderedScoreArray.length-1];
        
        for(int score: scoreArray){
            for(int student = 0; student < scoreArray.length; student ++){
                if(score >= highestScore-10){
                    System.out.println("Student " + student + " score is " + score + " and grade is A.");
                }
                else if(score >= highestScore-20){
                    String gradeStatement = ("Student " + student + " score is " + score + " and grade is B.");
                    return gradeStatement;
                }
                else if(score >= highestScore-30){
                    String gradeStatement = ("Student " + student + " score is " + score + " and grade is C.");
                    return gradeStatement;
                }
                else if(score >= highestScore-40){
                    String gradeStatement = ("Student " + student + " score is " + score + " and grade is D.");
                    return gradeStatement;
                }
                else{
                    String gradeStatement = ("Student " + student + " score is " + score + " and grade is F.");
                    return gradeStatement;
                }
            }
        }
        return "1";
    }
    
    
